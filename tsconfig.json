{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "noEmitOnError": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "tsconfig.json"]
}
  